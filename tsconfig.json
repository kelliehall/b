{
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es5"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": false,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "types": [
            "jasmine",
            "node",
            "bootstrap",
            "core-js",
            "lodash"
        ]
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}